+/**
+ * JASS 类型声明
+ * 语法：type NewType extends BaseType
+ */
+class TypeDeclaration extends Statement {
+    public name: Identifier;
+    public baseType: Identifier;
+
+    constructor(options: {
+        name: Identifier;
+        baseType: Identifier;
+        start?: { line: number, position: number };
+        end?: { line: number, position: number };
+    }) {
+        const {
+            name,
+            baseType,
+            start,
+            end
+        } = options;
+
+        super(start, end);
+        this.name = name;
+        this.baseType = baseType;
+
+        this.addChild(name);
+        this.addChild(baseType);
+    }
+
+    public toString(): string {
+        return `type ${this.name.toString()} extends ${this.baseType.toString()}`;
+    }
+}
